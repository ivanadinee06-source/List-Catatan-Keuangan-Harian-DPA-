

transaksi = []

def tambah_transaksi():
    print("\n=== Tambah Transaksi ===")
    jenis = input("Jenis (Pemasukan/Pengeluaran): ").capitalize()
    if jenis not in ["Pemasukan", "Pengeluaran"]:
        print("âŒ Jenis tidak valid!")
        return

    try:
        nominal = float(input("Nominal (Rp): "))
        if nominal <= 0:
            raise ValueError
    except ValueError:
        print("âŒ Nominal harus angka lebih dari 0!")
        return

    ket = input("Keterangan: ")
    transaksi.append((jenis, nominal, ket))
    print("âœ… Transaksi berhasil ditambahkan!\n")

def tampilkan_transaksi():
    print("\n=== Daftar Transaksi ===")
    if not transaksi:
        print("Belum ada transaksi.")
        return
    for i, (jenis, nominal, ket) in enumerate(transaksi, start=1):
        print(f"{i}. {jenis} - Rp{nominal:,.0f} ({ket})")

def hitung_saldo():
    saldo = 0
    for jenis, nominal, _ in transaksi:
        if jenis == "Pemasukan":
            saldo += nominal
        else:
            saldo -= nominal
    print(f"\nğŸ’° Saldo Saat Ini: Rp{saldo:,.0f}")

def hapus_semua():
    transaksi.clear()
    print("âš ï¸ Semua transaksi telah dihapus.\n")

def menu():
    while True:
        print("\n====== MENU ======")
        print("1. Tambah Transaksi")
        print("2. Lihat Transaksi")
        print("3. Lihat Saldo")
        print("4. Hapus Semua Transaksi")
        print("5. Keluar")

        pilihan = input("Pilih menu (1-5): ")

        if pilihan == "1":
            tambah_transaksi()
        elif pilihan == "2":
            tampilkan_transaksi()
        elif pilihan == "3":
            hitung_saldo()
        elif pilihan == "4":
            hapus_semua()
        elif pilihan == "5":
            print("ğŸ‘‹ Terima kasih! Program selesai.")
            break
        else:
            print("âŒ Pilihan tidak valid!")

if __name__ == "__main__":
    menu()
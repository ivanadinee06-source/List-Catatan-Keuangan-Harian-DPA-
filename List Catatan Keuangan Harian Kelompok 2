

transaksi = []

def tambah_transaksi():
    print("\n=== Tambah Transaksi ===")
    jenis = input("Jenis (Pemasukan/Pengeluaran): ").capitalize()
    if jenis not in ["Pemasukan", "Pengeluaran"]:
        print("Jenis tidak valid!")
        return

    try:
        nominal = float(input("Nominal (Rp): "))
        if nominal <= 0:
            raise ValueError
    except ValueError:
        print("Nominal harus angka lebih dari 0!")
        return

    ket = input("Keterangan: ")
    transaksi.append((jenis, nominal, ket))
    print("Transaksi berhasil ditambahkan!\n")

def tampilkan_transaksi():
    print("\n=== Daftar Transaksi ===")
    if not transaksi:
        print("Belum ada transaksi.")
        return
    for i, (jenis, nominal, ket) in enumerate(transaksi, start=1):
        print(f"{i}. {jenis} - Rp{nominal:,.0f} ({ket})")

def hitung_saldo():
    saldo = 0
    for jenis, nominal, _ in transaksi:
        if jenis == "Pemasukan":
            saldo += nominal
        else:
            saldo -= nominal
    print(f"\n Saldo Saat Ini: Rp{saldo:,.0f}")

def hapus_semua():
    transaksi.clear()
    print("Semua transaksi telah dihapus.\n")

def edit_transaksi():
    print("\n=== Edit Transaksi ===")
    if not transaksi:
        print("Belum ada transaksi.")
        return
    tampilkan_transaksi()
    try:
        nomor = int(input("Masukkan nomor transaksi yang akan diedit: "))
    except ValueError:
        print("Nomor tidak valid!")
        return
    jenis_lama, nominal_lama, ket_lama = transaksi[nomor - 1]
    print("Tekan Enter jika tidak ingin mengubah nilai.")
    jenis_baru = input(f"Jenis [{jenis_lama}]: ")
    if jenis_baru == ""
        jenis_baru = jenis_lama
    else:
        jenis_baru = jenis_baru.capitalize()
        if jenis_baru not in ["Pemasukan", "Pengeluaran"]:
            jenis_baru = jenis_lama
    nominal_input = input(f"Nominal [{nominal_lama}]: ")
    if nominal_input == ""
        nominal_baru = nominal_lama
    else:
        try:
            nominal_baru = float(nominal_input)
        except ValueError:
            nominal_baru = nominal_lama
    ket_baru = input(f"Keterangan [{ket_lama}]: ")
    if ket_baru == "":
        ket_baru = ket_lama
    transaksi[nomor - 1] = (jenis_baru, nominal_baru, ket_baru)
    print("Transaksi berhasil diedit!\n"

def hapus_satu():
    print("\n=== Hapus Satu Transaksi ===")
    if not transaksi:
        print("Belum ada transaksi.")
        return
    tampilkan_transaksi()
    try:
        nomor = int(input("Masukkan nomor transaksi yang ingin dihapus: ")
    except ValueError:
        print("Input harus angka!")
        return
    if nomor < 1 or nomor > len(transaksi):
        print("Nomor tidak valid!")
        return

    baru =[]
    for i in range(len(transaksi)):
        if i != nomor - 1:
            baru.append(transaksi[i])

    transaksi.clear()
    transaksi.extend(baru)

    print("Transaksi berhasil dihapus\n")
    
def menu():
    while True:
        print("\n====== MENU ======")
        print("1. Tambah Transaksi")
        print("2. Lihat Transaksi")
        print("3. Lihat Saldo")
        print("4. Hapus Semua Transaksi")
        print("5. Keluar")

        pilihan = input("Pilih menu (1-5): ")

        if pilihan == "1":
            tambah_transaksi()
        elif pilihan == "2":
            tampilkan_transaksi()
        elif pilihan == "3":
            hitung_saldo()
        elif pilihan == "4":
            hapus_semua()
        elif pilihan == "5":
            print("Terima kasih! Program selesai.")
            break
        else:
            print("Pilihan tidak valid!")

if __name__ == "__main__":
    menu()
